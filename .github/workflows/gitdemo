name: Azure Resource Provisioning

on: [push]

jobs:
  create-resources:
    runs-on: ubuntu-latest
    permissions:
      id-token: write # Required for OIDC
      contents: read # Allow checkout
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Azure Login
      uses: azure/login@v2
      with:
        client-id: ${{ secrets.AZURE_CLIENT_ID }}
        tenant-id: ${{ secrets.AZURE_TENANT_ID }}
        subscription-id: ${{ secrets.AZURE_SUBSCRIPTION_ID }}

    - name: Create Azure resources with Azure CLI
      uses: azure/cli@v2
      with:
        inlineScript: |
          az group create --name gittest --location eastus
          # Add more az commands here to create other resources
